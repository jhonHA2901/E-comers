<Window x:Class="CrepesCoffeeAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crepes and Coffee - Panel de AdministraciÃ³n" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F0"
        FontFamily="Roboto, Segoe UI, sans-serif">
    
    <Window.Resources>
        <!-- Colores principales -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5D4037"/>
        <SolidColorBrush x:Key="PrimaryLightColor" Color="#8D6E63"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#3E2723"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#D7CCC8"/>
        <SolidColorBrush x:Key="SecondaryLightColor" Color="#EFEBE9"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#3E2723"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#5D4037"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFF8F0"/>
        
        <!-- Estilos de botones -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E000000"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Estilo para tarjetas -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="15 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Grid.Column="1" 
                       Source="./Assets/logo.jpg" 
                       Width="40" 
                       Height="40"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" 
                            Margin="15,0,0,0" 
                            VerticalAlignment="Center">
                    <TextBlock Text="CREPES AND COFFEE" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               FontFamily="Playfair Display, serif"/>
                    <TextBlock Text="Panel de AdministraciÃ³n" 
                               FontSize="12" 
                               Foreground="#D7CCC8"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Bienvenido, " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtUserName" 
                               Text="Administrador" 
                               Foreground="#D7CCC8" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                    <Button x:Name="btnLogout" 
                            Content="Cerrar SesiÃ³n" 
                            Style="{StaticResource SecondaryButton}"
                            Foreground="White"
                            BorderBrush="#D7CCC8"
                            Cursor="Hand"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Background="#FFFFFF" 
                    BorderThickness="0 0 1 0" 
                    BorderBrush="#E0E0E0">
                <StackPanel Margin="0,30,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="Button" x:Key="MenuButtonStyle">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="30,15"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryDarkColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>
                    
                    <Button x:Name="btnDashboard" 
                            Content="Dashboard" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="BtnDashboard_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="î¤„" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button x:Name="btnProducts" 
                            Content="Productos" 
                            Style="{StaticResource MenuButtonStyle}" 
                            Click="BtnProducts_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="î£¯" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="16"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    

                    <!-- Categories Button -->
                    <Button x:Name="btnCategories" 
                            Content="ðŸ·ï¸ CategorÃ­as" 
                            Height="50" 
                            FontSize="14" 
                            Background="Transparent" 
                            Foreground="#333" 
                            BorderThickness="0" 
                            Margin="0,0,0,10" 
                            Cursor="Hand"
                            Click="BtnCategories_Click"/>

                    <!-- Orders Button -->
                    <Button x:Name="btnOrders" 
                            Content="ðŸ“‹ Pedidos" 
                            Height="50" 
                            FontSize="14" 
                            Background="Transparent" 
                            Foreground="#333" 
                            BorderThickness="0" 
                            Margin="0,0,0,10" 
                            Cursor="Hand"
                            Click="BtnOrders_Click"/>

                    <!-- Users Button -->
                    <Button x:Name="btnUsers" 
                            Content="ðŸ‘¥ Usuarios" 
                            Height="50" 
                            FontSize="14" 
                            Background="Transparent" 
                            Foreground="#333" 
                            BorderThickness="0" 
                            Margin="0,0,0,10" 
                            Cursor="Hand"
                            Click="BtnUsers_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Background="Transparent" 
                    Padding="30">
                
                <ContentControl x:Name="mainContent">
                    <Grid>
                        <!-- Dashboard Content -->
                        <Grid x:Name="dashboardContent" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- KPIs -->
                            <TextBlock Grid.Row="0" 
                                       Text="Resumen General" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,20"/>

                            <UniformGrid Grid.Row="1" Rows="2" Columns="3" Margin="0,0,0,30">
                                <!-- Total Sales -->
                                <Border Background="#E8F5E8" 
                                        BorderBrush="#4CAF50" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’°" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalSales" 
                                                   Text="$0.00" 
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#4CAF50"/>
                                        <TextBlock Text="Total Ventas" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total Orders -->
                                <Border Background="#E3F2FD" 
                                        BorderBrush="#2196F3" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ“‹" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalOrders" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#2196F3"/>
                                        <TextBlock Text="Total Pedidos" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                </Border>

                                <!-- Pending Orders -->
                                <Border Background="#FFF3E0" 
                                        BorderBrush="#FF9800" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="â³" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtPendingOrders" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#FF9800"/>
                                        <TextBlock Text="Pedidos Pendientes" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total Users -->
                                <Border Background="#F3E5F5" 
                                        BorderBrush="#9C27B0" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ‘¥" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalUsers" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#9C27B0"/>
                                        <TextBlock Text="Total Usuarios" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total Products -->
                                <Border Background="#E0F2F1" 
                                        BorderBrush="#009688" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ“¦" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalProducts" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#009688"/>
                                        <TextBlock Text="Total Productos" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                </Border>

                                <!-- Paid Orders -->
                                <Border Background="#E8F5E8" 
                                        BorderBrush="#4CAF50" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="âœ…" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtPaidOrders" 
                                                   Text="0" 
                                                   FontSize="24" 
                                                   FontWeight="Bold" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#4CAF50"/>
                                        <TextBlock Text="Pedidos Pagados" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#666"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>

                            <!-- Charts Section -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Top Products -->
                                <Border Grid.Column="0" 
                                        Background="#FAFAFA" 
                                        BorderBrush="#DDD" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,0" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="Productos MÃ¡s Vendidos" 
                                                   FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Margin="0,0,0,15"/>
                                        <ListView x:Name="lstTopProducts" 
                                                  Background="Transparent" 
                                                  BorderThickness="0">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                   Text="{Binding Nombre}" 
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" 
                                                                   Text="{Binding TotalVendido}" 
                                                                   FontWeight="Bold" 
                                                                   Foreground="#8B4513" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </Border>

                                <!-- Sales by Month -->
                                <Border Grid.Column="1" 
                                        Background="#FAFAFA" 
                                        BorderBrush="#DDD" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="10,0,0,0" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="Ventas por Mes" 
                                                   FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Margin="0,0,0,15"/>
                                        <ListView x:Name="lstSalesByMonth" 
                                                  Background="Transparent" 
                                                  BorderThickness="0">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                   Text="{Binding MesNombre}" 
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" 
                                                                   Text="{Binding TotalVentasFormateado}" 
                                                                   FontWeight="Bold" 
                                                                   Foreground="#8B4513" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Other Content Panels (initially hidden) -->
                        <Grid x:Name="productsContent" Visibility="Collapsed">
                            <TextBlock Text="GestiÃ³n de Productos" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <Grid x:Name="categoriesContent" Visibility="Collapsed">
                            <TextBlock Text="GestiÃ³n de CategorÃ­as" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <Grid x:Name="ordersContent" Visibility="Collapsed">
                            <TextBlock Text="GestiÃ³n de Pedidos" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <Grid x:Name="usersContent" Visibility="Collapsed">
                            <TextBlock Text="GestiÃ³n de Usuarios" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </ContentControl>
            </Border>
        </Grid>
    </Grid>
</Window>
