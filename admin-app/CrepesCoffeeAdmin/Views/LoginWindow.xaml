<Window x:Class="CrepesCoffeeAdmin.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crepes and Coffee - Login Administrador" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="☕" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Crepes and Coffee" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="Panel de Administración" FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Background="White" Margin="50,20" CornerRadius="10" Padding="40">
            <StackPanel>
                <TextBlock Text="Iniciar Sesión" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" Padding="10,8" FontSize="14" 
                         VerticalContentAlignment="Center" Margin="0,0,0,15"/>
                
                <TextBlock Text="Contraseña:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="35" Padding="10,8" FontSize="14" 
                             VerticalContentAlignment="Center" Margin="0,0,0,25"/>
                
                <Button x:Name="btnLogin" Content="Iniciar Sesión" Height="40" 
                        Background="#8B4513" Foreground="White" FontWeight="SemiBold"
                        BorderThickness="0" FontSize="14" Click="BtnLogin_Click"/>
                
                <TextBlock x:Name="txtError" Foreground="Red" HorizontalAlignment="Center" 
                           Margin="0,15,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Solo personal autorizado" FontSize="12" Foreground="#999" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window> 